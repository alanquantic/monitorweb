{
  "functions": {
    "api/monitor.js": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/monitor",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/monitor", 
      "schedule": "0 19 * * *"
    },
    {
      "path": "/api/monitor",
      "schedule": "45 22 * * *"
    },
    {
      "path": "/api/monitor",
      "schedule": "0 4 * * *"
    }
  ],
  "buildCommand": "echo 'No build needed for serverless functions'",
  "outputDirectory": ".",
  "env": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "regions": ["iad1"]
} 